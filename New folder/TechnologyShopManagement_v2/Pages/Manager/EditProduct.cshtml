                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="d-sm-flex align-items-center justify-content-between mb-4">
                        <h1 class="h3 mb-0 text-gray-800">Edit Product</h1>

                    </div>
                     <div class="d-sm-flex align-items-center justify-content-between mb-4">

                        <h3 style="color:red;">@HttpContext.Session.GetString("errorMessage")</h3>

                    </div>



                    <!-- Content Row -->
                    <div class="row">
                         <div class="col-7"> 
                                    <form  method="post">
                                        <div class="mb-3">
                                             <input asp-for="product.Id" value="@Model.product.Id" class="form-control"  hidden >
                                            <label   class="form-label" asp-for="product.ProductName" >Product Name</label>
                                            <input   class="form-control" asp-for="product.ProductName" value="@Model.product.ProductName" required placeholder="Enter product name" >

                                        </div>

                                         <div class="row">
                                             
                                             
                                            <div class="col-4">
                                                  
                                                <label class="form-check-label" asp-for="product.Price" >Price</label>
                                                <input class="form-control" min="0"     asp-for="product.Price" type="number" value="@Model.product.Price" required placeholder="Enter product price">


                                            </div>
                                 <div class="col-4">
                                                <label class="form-check-label" asp-for="product.CategoryCode" >Category Name</label>
                                                <select class="form-control form-select form-select-sm" asp-for="product.CategoryCode">

                                            @foreach (var i in Model.categoryList)
                                            {
                                                @if (i.Code.Equals(Model.product.CategoryCode))
                                                {
                                                                <option value="@i.Code" selected>@i.Name</option>
                                                }
                                                else
                                                {
                                                                <option value="@i.Code" >@i.Name</option>
                                                }

                                            }


                                                </select>

                                            </div>
                                             <div class="col-4">
                                                <label  class="form-check-label" asp-for="product.Stock"  >Stock</label>
                                                <input  class="form-control" min="0" asp-for="product.Stock" value="@Model.product.Stock"  required placeholder="Enter Stock">


                                            </div>

                                        </div>

                                       
                                         <div class="mb-3">
                                            <label asp-for="product.ProDescription" class="form-label">Product Description</label>
                                            <textarea asp-for="product.ProDescription" class="form-control"  required placeholder="Enter product description" ></textarea>

                                        </div>
                                        <div class="mb-3">

                                            <div class="row">

                                            <div class="col-7" id="imageLink"> 
                                                 <div class="form-check">

  <label class="form-check-label" for="flexRadioDefault1">
   Image Link
  </label>
    <input class="form-check-input" style="margin-left:5px" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
</div>

                                            <input   id="image-input"   class="form-control" readonly  required placeholder="Enter link image" type="text"/>
                                            <input asp-for="@Model.product.ProImage" value="@Model.product.ProImage" id="image-final" hidden  class="form-control"   type="text"/>

                                        </div>


                                       <div class="col-5"> 
                                            <div class="form-check">

  <label class="form-check-label" for="flexRadioDefault2">
   Choose File
  </label>
    <input class="form-check-input" style="margin-left:5px" type="radio" name="flexRadioDefault" id="flexRadioDefault2">
</div>
                                            <input asp-for="@Model.product.ProImage" readonly id="image-upload" disabled  class="form-control" type="file"/>
                                      </div>

                                        </div>
                                      
                                        
                                        
                                    
                                          <img src="@Model.product.ProImage"  id="image-preview" width="250" height="200" alt="product"/>
                                        </div>

                                          <div class="form-check form-switch">
                                            <label class="form-check-label" for="flexSwitchCheckChecked">Status</label>

                                    @if (Model.product.Status == 1)
                                    {
                                             <input style="margin-left: 15px" class="form-check-input" type="checkbox" name="productStatus" role="switch" id="flexSwitchCheckChecked" 

                                              checked>
                                    }
