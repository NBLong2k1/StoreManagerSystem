                                    {
                                             <input style="margin-left: 15px" class="form-check-input" type="checkbox" name="productStatus" role="switch" id="flexSwitchCheckChecked" 

                                              >
                                    }

                                        </div>






                                        </br>
                                        <button type="submit" name="submitAddProduct" class="btn btn-primary">Submit</button>
                                        <a  asp-page="/Manager/listProduct" name="back" class="btn btn-secondary">Back</a>
                                    </form>

