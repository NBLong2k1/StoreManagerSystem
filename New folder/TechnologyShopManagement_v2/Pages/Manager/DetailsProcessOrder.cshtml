@page
@model TechnologyShopManagement_v2.Pages.Manager.DetailsProcessOrderModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Employee- Dashboard</title>
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Custom fonts for this template-->
    <link href="~/ForManager/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/ForManager/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
         <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">


            @if (Model.accountU.Role == 2)
            {


                        <!-- Sidebar - Brand -->
                        <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-page="/Manager/Admin/adminManager">
                            <div class="sidebar-brand-icon rotate-n-15">
                                <i class="fas fa-laugh-wink"></i>
                            </div>
                                <div class="sidebar-brand-text mx-3">@Model.accountU.Username</div>
                        </a>

                        <!-- Divider -->
                        <hr class="sidebar-divider my-0">

                        <!-- Nav Item - Dashboard -->
                        <li class="nav-item active">
                            <a class="nav-link" asp-page="/Manager/Admin/adminManager">
                                <i class="fas fa-fw fa-tachometer-alt"></i>
                                <span>Dashboard</span></a>
                        </li>
            }
            @if (Model.accountU.Role == 1)
            {


                            <!-- Sidebar - Brand -->
                                <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-page="/Manager/Employee/employeeManager">
                                <div class="sidebar-brand-icon rotate-n-15">
                                    <i class="fas fa-laugh-wink"></i>
                                </div>
                                    <div class="sidebar-brand-text mx-3">@Model.accountU.Username</div>
                            </a>

                            <!-- Divider -->
                            <hr class="sidebar-divider my-0">

                            <!-- Nav Item - Dashboard -->
                            <li class="nav-item active">
                                    <a class="nav-link" asp-page="/Manager/Employee/employeeManager">
                                    <i class="fas fa-fw fa-tachometer-alt"></i>
                                    <span>Dashboard</span></a>
                            </li>
            }


            <!-- Divider -->
            <hr class="sidebar-divider">

            @if (Model.accountU.Role == 2)
            {
                            <!-- Nav Item - Pages Collapse Menu -->
                            <li class="nav-item">
                                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwoIncome"
                    aria-expanded="true" aria-controls="collapseTwoIncome">
                                <i class="fas fa-user fa-cog"></i>
                                <span>Earning</span>
                            </a>
                            <div id="collapseTwoIncome" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                                <div class="bg-white py-2 collapse-inner rounded">
                                    <h6 class="collapse-header">Income</h6>
                                    <a class="collapse-item" asp-page="/Manager/Earning/listEarning">Income</a>

                                </div>
                            </div>
                        </li>
            }
            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                    aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-user fa-cog"></i>
                    <span>Account</span>
                </a>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Custom Components:</h6>
                        @if (Model.accountU.Role == 2)
                        {
                                    <a class="collapse-item" asp-page="/Manager/Employee/listEmployee">Employee</a>
                        }
                        <a class="collapse-item" asp-page="/Manager/Customer/listCustomer">Customer</a>
                        <a class="collapse-item" asp-page="/Manager/Guest/listGuest">Guest</a>
                    </div>
                </div>
            </li>

            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities"
                    aria-expanded="true" aria-controls="collapseUtilities">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Items</span>
                </a>
                <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
                    data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Custom Utilities:</h6>
                        <a class="collapse-item" asp-page="/Manager/listProduct">Product</a>
                         <a class="collapse-item" asp-page="/Manager/listCategory">Category</a>
                    </div>
                </div>
            </li>


            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilitiesOrder"
                    aria-expanded="true" aria-controls="collapseUtilitiesOrder">
                    <i class="fas fa-shopping-cart"></i>
                    <span>Order</span>
                </a>
                <div id="collapseUtilitiesOrder" class="collapse" aria-labelledby="headingUtilities"
                    data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Custom Utilities:</h6>
                        <a class="collapse-item" asp-page="/Manager/listProcessOrder" >Process Order</a>
                         <a class="collapse-item" asp-page="/Manager/listHistoryOrder">History</a>
                    </div>
                </div>
            </li>


        </ul>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>


                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">


                        <div class="topbar-divider d-none d-sm-block"></div>

                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@Model.accountU.Username</span>
                                <img class="img-profile rounded-circle"
                                    src="~/ForManager/img/undraw_profile.svg">
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                aria-labelledby="userDropdown">
                                @if (Model.accountU.Role == 2)
                                {
                                        <a class="dropdown-item" asp-page="/Manager/Admin/editAdminInformation">
                                            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                            Profile
                                        </a>

                                }
                                @if (Model.accountU.Role == 1)
                                {
                                            <a class="dropdown-item" asp-page="/Manager/Admin/editEmployeeInformation">
                                                <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                                Profile
                                            </a>

                                }
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>

                    </ul>

                </nav>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->


                 <!--  Employee    -->
                    <div class="container-fluid" id="listEmployee" style="display: block"  >




                        <div >
                            <h1>Order Details</h1>


                        </div>

                         <div >
                        @if (Model.ord.Status ==0)
                        {
                              <a asp-page="/Manager/DetailsProcessOrder" asp-route-valueStatus="1" asp-route-orderId="@Model.ord.Id"  class="btn btn-primary">Process</a>
                        
                        }
                        else{
                              
                                 

                        }
                        @if (Model.ord.Status == 1)
                        {
                                 <a asp-page="/Manager/DetailsProcessOrder" asp-route-valueStatus="2" asp-route-orderId="@Model.ord.Id"  class="btn btn-success">Success</a>
                                 <a asp-page="/Manager/DetailsProcessOrder" asp-route-valueStatus="3" asp-route-orderId="@Model.ord.Id"  class="btn btn-danger">Failed</a>
                        }
                        else
                        {   
                                    

                        }


                        
                  
                   
                    <a asp-page="/Manager/listProcessOrder"  class="btn btn-secondary">Back</a>
                        </div>


                        <table class="table">
                            <thead>
                                <tr>
                                  
                                    <th scope="col">Product Name</th>

                                    <th scope="col">Images</th>
                                    <th scope="col">Quantity</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Total Price</th>
                                </tr>
                            </thead>
                            <tbody>


                            @if (Model.orders != null)
                            {
                                
                           
                            @foreach (var lst in Model.orders)
                            {
                                <tr>

                                                     <td>@lst.Product.ProductName</td>
                                                              <td> <img src="@lst.Product.ProImage" height="100" width="150"></img></td>
                                                       <td>@lst.Quantity</td>
                                                                 <td>@lst.Price?.ToString("#,##0")₫</td>
                                                                   <td>@lst.TotalEachOrder?.ToString("#,##0")₫</td>
                                                                 
                                                    
                                                       </tr>
                            }


                            }

                            </tbody>
                        </table>



                    </div>



                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
              </div>
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2021</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->


        <!-- End of Content Wrapper -->


    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" asp-page="/Manager/LogOut">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/ForManager/vendor/jquery/jquery.min.js"></script>
    <script src="~/ForManager/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/ForManager/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/ForManager/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/ForManager/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/ForManager/js/demo/chart-area-demo.js"></script>
    <script src="~/ForManager/js/demo/chart-pie-demo.js"></script>

</body>

</html>