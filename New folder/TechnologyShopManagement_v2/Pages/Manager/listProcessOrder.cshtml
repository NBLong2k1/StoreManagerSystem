    <script>

        $(document).ready(function () {

            ShowAllIncome();



            $("#searchOrder").click(function () {

                var inputSearch = $("#inputSearch").val();
                var idNumber=0;
                if ($.isNumeric(inputSearch)) {
                    idNumber = parseInt(inputSearch);
                }
             
                var myOrderUlr = "https://localhost:7179/api/Orders/GetProcessOrders?$filter=contains(name,'" + inputSearch + "') or contains(address,'" + inputSearch + "') or contains(dateOrder,'" + inputSearch + "') or contains(dateDelivery,'" + inputSearch + "') or contains(dateRecipt,'" + inputSearch + "') or id eq " + idNumber;

                emptyList();
                $.ajax({
                    url: myOrderUlr, // Replace with the actual URL that provides the data
                    type: 'GET',
                    contentType: 'application/json;charset=utf-8',
                    dataType: 'json',
                    success: function (result) {
                        emptyList();
                        $.each(result, function (index, value) {
                            var cusType = "Guest";
                            if (value.customerType === 0) {
                                cusType = "Customer";
                            }

                            var statusProcess = " <a readonly class=' btn btn-secondary'>Waiting</a>";
                            if (value.status === 1) {
                                statusProcess = " <a readonly class=' btn btn-primary'>Process</a>";
                            }


                            var newRow = "<tr><td>"
                                + value.id + "</td><td>"
                                + value.name + "</td><td>"
                                + cusType + "</td><td>"
                                + value.address + "</td><td>"
                                + value.phoneNumber + "</td><td>"
                                + value.dateOrder + "</td><td>"
                                + value.dateDelivery + "</td>"
                                +  "<td>"
                                + value.totalPrice + "₫</td>"
                                + "<td>" + statusProcess + "</td>"
                                + "<td><a class='btn btn-warning' href='/Manager/DetailsProcessOrder?orderId=" + value.id + "' >View Details</a></td></tr>";
                            $('#myTable tbody').append(newRow);

                        });
                    },
                    error: function () {
                        alert('Not Found.');
                    }
                });
            });




            function ShowAllIncome() {

                $.ajax({
                    url: "https://localhost:7179/api/Orders/GetProcessOrders", // Replace with the actual URL that provides the data
                    type: 'GET',
                    contentType: 'application/json;charset=utf-8',
                    dataType: 'json',
                    success: function (result) {
                        emptyList();
                        $.each(result, function (index, value) {
                             var cusType="Guest";
                             if(value.customerType===0){
                                 cusType="Customer";
                             }

                            var statusProcess = " <a readonly class=' btn btn-secondary'>Waiting</a>";
                            if (value.status ===1) {
                                statusProcess = " <a readonly class=' btn btn-primary'>Process</a>";
                            }


                            var newRow = "<tr><td>"
                                + value.id + "</td><td>"
                                + value.name + "</td><td>"
                                + cusType + "</td><td>"
                                + value.address + "</td><td>"
                                + value.phoneNumber + "</td><td>"
                                + value.dateOrder + "</td><td>"
                                + value.dateDelivery + "</td>"
                                + "<td>"
                                + value.totalPrice + "₫</td>"
                                + "<td>" + statusProcess + "</td>"
                                + "<td><a class='btn btn-warning' href='/Manager/DetailsProcessOrder?orderId=" + value.id + "' >View Details</a></td></tr>";
                            $('#myTable tbody').append(newRow);

                        });
                    },
                    error: function () {
                        alert('Error occurred while fetching data.');
                    }
                });



            }


            function emptyList() {
                $('#myTable tbody').empty();

            }





        });




    </script>


