@page
@model TechnologyShopManagement_v2.Pages.Manager.forgotPasswordModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Đăng nhập";
}
<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-7 col-lg-7 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row justify-content-end">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                </div>
                                <form action="" method="post" class="user">
                                    <span class="msg-error">@ViewData["msg"]</span><br />
                                    <div class="form-group">
                                        <label>UserName<span style="color: red;">*</span></label><br />
                                        <input type="text" asp-for="Account.Username" class="form-control form-control-user"
                                               id="exampleInputEmail" aria-describedby="emailHelp"
                                               placeholder="Enter Username">
                                        <span class="msg-error" asp-validation-for="Account.Username"></span><br />
                                    </div>
                                    <div class="form-group">
                                        <label>Email<span style="color: red;">*</span></label><br />
                                        <input   asp-for="Account.Email" type="email" class=" form-control form-control-user"
                                               id="exampleInputPassword" placeholder="Enter Email">
                                        <span class="msg-error" asp-validation-for="Account.Email"></span><br />
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-user btn-block">Find Account</button>
                                </form>
                                <hr />
                           <div class="text-center">
                                    <a class="small" asp-page="/Manager/Login">Login !!!</a>
                                </div>

                                <div class="text-center">
                                    <a class="small" asp-page="Register">Create an Account!</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
