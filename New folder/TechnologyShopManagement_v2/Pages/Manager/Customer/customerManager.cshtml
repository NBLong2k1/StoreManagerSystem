    <script>
        $(document).ready(function () {


            $.ajax({
                url: 'https://localhost:7179/api/Orders/individualCustomerOrder/' + @Model.account.UserId, // Replace with the actual URL that provides the data
                type: 'GET',
                contentType: 'application/json;charset=utf-8',
                dataType: 'json',
                success: function (result) {
                    $.each(result, function (index, value) {
                       

                        var statusProcess = " <a readonly class=' btn btn-danger'>Failed</a>";
                        if (value.status === 2) {
                            statusProcess = " <a readonly class=' btn btn-success'>Success</a>";
                        }


                        var newRow = "<tr><td>"
                            + value.id + "</td><td>"
                            + value.dateOrder + "</td><td>"
                            + value.dateDelivery + "</td><td>"
                            + value.dateRecipt + "</td>"
                            + "<td>" + value.totalPrice + "₫</td>"
                            + "<td>" + statusProcess + "</td></tr>";
                        $('#myTable1 tbody').append(newRow);

                    });
                },
                error: function () {
                    alert('Not Found.');
                }
            });



            $.ajax({
                url: 'https://localhost:7179/api/Carts/productListCart/' + @Model.account.UserId,
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                   
                    $.each(data, function (index, value) {

                        var newRow = "<tr><td>"
                            + value.id + "</td><td>"
                            + value.productName + "</td><td>"
                            + value.quantity + "</td>"
                          
                            + "<td>" + value.totalPrice + "₫</td></tr>";
                        $('#myTable2 tbody').append(newRow);


                    });
                     

                },
                error: function (err) {
                    console.error('Error fetching data from the API:', err);
                }
            });

        });
    </script>

